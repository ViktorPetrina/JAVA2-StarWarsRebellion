<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<?import javafx.scene.layout.Region?>
<AnchorPane style=" -fx-background-color: #000000;" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="hr.vpetrina.starwars.controller.ChooseLeaderController">

    <VBox alignment="CENTER" prefHeight="700" prefWidth="450" spacing="15" style="-fx-padding: 20; -fx-background-color: #000000;" AnchorPane.leftAnchor="10" AnchorPane.rightAnchor="10" AnchorPane.topAnchor="10">
        <Label fx:id="lblLeaders" style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: #ffffff;" text="Choose Your Leaders (Select 2)" />

        <HBox alignment="CENTER" spacing="20">
            <VBox alignment="CENTER" prefWidth="200" spacing="10" style="-fx-padding: 15; -fx-background-color: #ffffff; -fx-border-color: #444; -fx-border-width: 2px; -fx-border-radius: 12; -fx-background-radius: 12; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.2), 10, 0, 0, 5);">
                <ImageView fx:id="leaderImage1" fitHeight="140" fitWidth="140" />
                <Label fx:id="leaderName1" style="-fx-font-weight: bold; -fx-font-size: 20px; -fx-text-fill: #222;" text="Leader 1" />
                <Label text="Combat:" /> <Label fx:id="leaderStat11" text="0" />
                <Label text="Espionage:" /> <Label fx:id="leaderStat12" text="0" />
                <Button fx:id="chooseButton1" style="-fx-font-size: 14px; -fx-background-color: #6a6a6a; -fx-text-fill: white;" text="Choose" />
            </VBox>

            <VBox alignment="CENTER" prefWidth="200" spacing="10" style="-fx-padding: 15; -fx-background-color: #ffffff; -fx-border-color: #444; -fx-border-width: 2px; -fx-border-radius: 12; -fx-background-radius: 12; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.2), 10, 0, 0, 5);">
                <ImageView fx:id="leaderImage2" fitHeight="140" fitWidth="140" />
                <Label fx:id="leaderName2" style="-fx-font-weight: bold; -fx-font-size: 20px; -fx-text-fill: #222;" text="Leader 2" />
                <Label text="Combat:" /> <Label fx:id="leaderStat21" text="0" />
                <Label text="Espionage:" /> <Label fx:id="leaderStat22" text="0" />
                <Button fx:id="chooseButton2" style="-fx-font-size: 14px; -fx-background-color: #6a6a6a; -fx-text-fill: white;" text="Choose" />
            </VBox>

            <VBox alignment="CENTER" prefWidth="200" spacing="10" style="-fx-padding: 15; -fx-background-color: #ffffff; -fx-border-color: #444; -fx-border-width: 2px; -fx-border-radius: 12; -fx-background-radius: 12; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.2), 10, 0, 0, 5);">
                <ImageView fx:id="leaderImage3" fitHeight="140" fitWidth="140" />
                <Label fx:id="leaderName3" style="-fx-font-weight: bold; -fx-font-size: 20px; -fx-text-fill: #222;" text="Leader 3" />
                <Label text="Combat:" /> <Label fx:id="leaderStat31" text="0" />
                <Label text="Espionage:" /> <Label fx:id="leaderStat32" text="0" />
                <Button fx:id="chooseButton3" style="-fx-font-size: 14px; -fx-background-color: #6a6a6a; -fx-text-fill: white;" text="Choose" />
            </VBox>

            <VBox alignment="CENTER" prefWidth="200" spacing="10" style="-fx-padding: 15; -fx-background-color: #ffffff; -fx-border-color: #444; -fx-border-width: 2px; -fx-border-radius: 12; -fx-background-radius: 12; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.2), 10, 0, 0, 5);">
                <ImageView fx:id="leaderImage4" fitHeight="140" fitWidth="140" />
                <Label fx:id="leaderName4" style="-fx-font-weight: bold; -fx-font-size: 20px; -fx-text-fill: #222;" text="Leader 4" />
                <Label text="Combat:" /> <Label fx:id="leaderStat41" text="0" />
                <Label text="Espionage:" /> <Label fx:id="leaderStat42" text="0" />
                <Button fx:id="chooseButton4" style="-fx-font-size: 14px; -fx-background-color: #6a6a6a; -fx-text-fill: white;" text="Choose" />
            </VBox>
        </HBox>
        <HBox prefHeight="100.0" prefWidth="200.0" alignment="CENTER">
            <children>
                <Button fx:id="btnReady" onAction="#startGame" prefHeight="48.0" prefWidth="193.0" style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-background-color: #6a6a6a; -fx-text-fill: white; -fx-padding: 10px 20px; -fx-border-radius: 5; -fx-background-radius: 5;" text="Ready">
                    <HBox.margin>
                        <Insets bottom="20.0" left="20.0" right="10.0" top="20.0" />
                    </HBox.margin>
                </Button>
                <Region HBox.hgrow="ALWAYS" />
                <Button fx:id="btnReset" onAction="#resetChoices" prefHeight="48.0" prefWidth="193.0" style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-background-color: #6a6a6a; -fx-text-fill: white; -fx-padding: 10px 20px; -fx-border-radius: 5; -fx-background-radius: 5;" text="Reset">
                    <HBox.margin>
                        <Insets bottom="20.0" left="10.0" right="20.0" top="20.0" />
                    </HBox.margin>
                </Button>
            </children>
        </HBox>
    </VBox>
</AnchorPane>
