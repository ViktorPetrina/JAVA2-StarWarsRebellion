<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.text.Text?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.Scene?>
<?import javafx.stage.Stage?>
<?import javafx.collections.FXCollections?>

<?import java.lang.String?>
<VBox xmlns:fx="http://javafx.com/fxml" spacing="20" alignment="CENTER" style="-fx-background-color: lightgray; -fx-padding: 20;"
      fx:controller="hr.vpetrina.starwars.controller.ChooseLeaderController">
    <Text text="Choose a Character" style="-fx-font-size: 24px; -fx-font-weight: bold;"/>

    <HBox spacing="15" alignment="CENTER">
        <!-- Character Pictures Displayed Horizontally -->
        <HBox fx:id="imageContainer" spacing="10" alignment="CENTER">
            <ImageView fx:id="image1" fitHeight="150" fitWidth="150" />
            <ImageView fx:id="image2" fitHeight="150" fitWidth="150" />
            <ImageView fx:id="image3" fitHeight="150" fitWidth="150" />
            <ImageView fx:id="image4" fitHeight="150" fitWidth="150" />
        </HBox>
    </HBox>

    <HBox spacing="15" alignment="CENTER">
        <!-- Character Name and Attributes Display -->
        <VBox fx:id="characterDetails" spacing="10" alignment="CENTER">
            <Text fx:id="characterName" style="-fx-font-size: 18px; -fx-font-weight: bold;"/>
            <Text fx:id="characterAttributes" style="-fx-font-size: 14px;"/>
        </VBox>

        <!-- ListView to Select Character -->
        <ListView fx:id="characterList" prefHeight="200" prefWidth="200">
            <items>
                <FXCollections fx:factory="observableArrayList">
                    <String fx:value="Character 1"/>
                    <String fx:value="Character 2"/>
                    <String fx:value="Character 3"/>
                    <String fx:value="Character 4"/>
                </FXCollections>
            </items>
        </ListView>
    </HBox>

    <Button text="Confirm" />
</VBox>
